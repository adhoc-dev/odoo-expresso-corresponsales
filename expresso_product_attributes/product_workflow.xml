<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_product_producto_pendiente" model="workflow">
            <field name="name">product.producto_pendiente.wkf</field>
            <field name="osv">product.producto_pendiente</field>
            <field name="on_create">True</field>
        </record>
        
        <!-- Activity -->
        <record model="workflow.activity" id="product_producto_pendiente_activo">
            <field name="wkf_id" ref="wkf_product_producto_pendiente" />
            <field name="flow_start">True</field>
            <field name="name">activo</field>
            <field name="kind">function</field>
            <field name="action">pendiente_state_activo()</field>
        </record>
        
        <record model="workflow.activity" id="product_producto_pendiente_cancelado">
            <field name="wkf_id" ref="wkf_product_producto_pendiente" />
            <field name="flow_stop">True</field>
            <field name="name">cancelado</field>
            <field name="kind">function</field>
            <field name="action">pendiente_state_cancelado()</field>
        </record>
        
        <record model="workflow.activity" id="product_producto_pendiente_repedido">
            <field name="wkf_id" ref="wkf_product_producto_pendiente" />
            <field name="flow_stop">True</field>
            <field name="name">repedido</field>
            <field name="kind">function</field>
            <field name="action">pendiente_state_repedido()</field>
        </record>
        
        <!-- Transitions -->
        <record model="workflow.transition" id="producto_pendiente_activo_2_cancelado">
            <field name="act_from" ref="product_producto_pendiente_activo" />
            <field name="act_to" ref="product_producto_pendiente_cancelado" />
            <field name="group_id" ref="expresso_product_attributes.expresso_grupo_corresponsales" />
            <field name="signal">producto_pendiente_activo_2_cancelado</field>
        </record>
        
        <record model="workflow.transition" id="producto_pendiente_activo_2_repedido">
            <field name="act_from" ref="product_producto_pendiente_activo" />
            <field name="act_to" ref="product_producto_pendiente_repedido" />
            <field name="group_id" ref="expresso_product_attributes.expresso_grupo_corresponsales" />
            <field name="signal">producto_pendiente_activo_2_repedido</field>
        </record>
        
    </data>
</openerp>
