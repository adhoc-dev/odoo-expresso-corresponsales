<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="order_add_message_view">
            <field name="name">order.add_message.form</field>
            <field name="model">order.add_message</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Nuevo Mensaje">
                    <separator string="Texto del Mensaje" colspan="4" />
                    <group colspan="4" col="4" width="500">
                        <field name="message" nolabel="1" colspan="4" default_focus="1" />
                    </group>
                    <separator string="" colspan="4"/>
                    <group colspan="4" col="4" >
                        <button string="Cancelar" icon="gtk-close" special="cancel" />
                        <button name="action_add" type="object" string="Agregar" icon="gtk-ok" />
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_order_add_message">
            <field name="name">Nuevo Mensaje</field>
            <field name="res_model">order.add_message</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="order_add_message_view"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
